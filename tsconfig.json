{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "Node16",
    "outDir": "dist",
    "isolatedModules": true,
    "baseUrl": "src",
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@labs/app": ["./app/index.ts"],
      "@labs/components": ["./ui/components/index.ts"],
      "@labs/layers": ["./ui/layers/index.ts"],
      "@labs/utils": ["./utils/index.ts"],
      "@labs/state": ["./state/index.ts"],
      "@labs/server": ["./server/index.ts"]
    }
  },
  "include": ["src"]
}
